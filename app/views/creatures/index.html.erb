<%= form_for Creature.new do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.submit "Save creature" %>
<% end %>

<% @creatures.each do |creature| %>
	<div>
		Name: <%= creature.name %> <br>
		Description: <%= creature.description %>
		<%= button_to "Delete", creature, method: :delete %>
		<hr>
	</div>
<% end %>